{{> header}}
<div class="contenedor">
    {{#if error}}
        <div class="text-danger" id="msgError">
            * {{error}}
        </div>
    {{else}}
        <div id="showDetail">
            {{#with travel}}
                <div class='title'>{{destino}}</div>
                <div class='hr'></div>
                <div class='travel'>
                    <img src="/uploads/{{imagenPrincipal.image.image}}" alt="{{destino}}">
                    <div>
                        <div>Precio: <span class="precio">{{precio}}</span><span class="space"></span><span class="descuento">{{descuento}}</span></div>
                        <div>Desde <span class="fecha">{{../dateIni}}</span> hasta <span class="fecha">{{../dateEnd}}</span></div>
                        <div>{{descripcion}}</div>
                    </div>
                </div>
            {{/with}}
        </div>
    {{/if}}
</div>
<script src="/js/price.js"></script>

{{> header}}
<div class="contenedor center">
    {{#if users}}
        <form action="/usuarios/lista" method="post" class="showList large">
            <div class="formtit">Listado de usuarios</div>
            <div class="tableu">
                <div class="rowu capt">
                    <div class="cellu">Usuario</div>
                    <div class="cellu">Email</div>
                    <div class="cellu">Rol</div>
                    <div class="cellu">Estado</div>
                    <div class="cellu">E-mail</div>
                </div>
                {{#each users}}
                    <div class="rowu">
                        <div class="cellu">{{usuario}}</div>
                        <div class="cellu">{{email}}</div>
                        <div class="cellu">
                            <select size="1" name="role" class={{id}}>
                                <option value="administrador" {{selectAdmin}}>Administrador</option>
                                <option value="usuario" {{selectUser}}>Usuario</option>
                            </select>
                        </div>
                        <div class="cellu">
                            <select size="1" name="active" class={{id}}>
                                <option value="true" {{selectActiv}}>Activo</option>
                                <option value="false" {{selectInactiv}}>Inactivo</option>
                            </select>
                        </div>
                        <div class="cellu">
                            <button name="sendMail" class={{id}}>Enviar</button>
                        </div>
                        <input type="hidden" id="rol{{id}}" value={{rolIni}}>
                        <input type="hidden" id="act{{id}}" value={{actIni}}>
                        <input type="hidden" id="user{{id}}" value={{usuario}}>
                        <input type="hidden" id="id{{id}}" value={{id}}>
                        <input type="hidden" id="mail{{id}}" value={{email}}>
                    </div>                    
                {{/each}}
            </div>
        </form>
    {{/if}}
    <div class="text-danger" id="msgError">
        {{#if error}}
            * {{error}}
        {{/if}}
    </div>
    <div class="text-success" id="msgSuccess">
    </div>
</div>
<script src="/js/list.js"></script>
